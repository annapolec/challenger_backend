#battleMemberGroupFormModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "battleMemberGroupFormModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#battleMemberGroupFormModalLabel.modal-title Add group
      .modal-body
        = simple_form_for @battle_member do |f|
          = f.input_field :battle_id, as: :hidden, value: @battle.id
          = f.input_field :member_id, collection: Group.all, label_method: :name, value_method: :id, label: false, placeholder: 'or a group', class: 'form-group form-control'
          = f.input_field :member_type, as: :hidden, value: 'Group'

          = f.submit class: 'btn btn-info-outline'