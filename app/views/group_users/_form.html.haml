#groupUserFormModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "groupUserFormModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#groupUserFormModalLabel.modal-title Add user
      .modal-body
        = simple_form_for @group_user do |f|
          = f.input_field :group_id, as: :hidden, value: @group.id
          = f.input_field :user_id, collection: User.all, label_method: :email, value_method: :id, label: false, placeholder: 'User', class: 'form-group form-control'
          = f.submit class: 'btn btn-info-outline'